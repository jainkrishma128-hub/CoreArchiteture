using CommonArchitecture.Application.DTOs;
using MediatR;

namespace CommonArchitecture.Application.Commands.Menus.CreateMenu;

public class CreateMenuCommand : IRequest<MenuDto>
{
 public string Name { get; set; }
 public string Icon { get; set; }
 public string Url { get; set; }
 public int? ParentMenuId { get; set; }
 public int DisplayOrder { get; set; }

 public CreateMenuCommand(string name, string icon, string url, int? parentMenuId, int displayOrder)
 {
 Name = name;
 Icon = icon;
 Url = url;
 ParentMenuId = parentMenuId;
 DisplayOrder = displayOrder;
 }
}
