using MediatR;

namespace CommonArchitecture.Application.Commands.Menus.UpdateMenu;

public class UpdateMenuCommand : IRequest<bool>
{
 public int Id { get; set; }
 public string Name { get; set; }
 public string Icon { get; set; }
 public string Url { get; set; }
 public int? ParentMenuId { get; set; }
 public int DisplayOrder { get; set; }
 public bool IsActive { get; set; }

 public UpdateMenuCommand(int id, string name, string icon, string url, int? parentMenuId, int displayOrder, bool isActive)
 {
 Id = id;
 Name = name;
 Icon = icon;
 Url = url;
 ParentMenuId = parentMenuId;
 DisplayOrder = displayOrder;
 IsActive = isActive;
 }
}
