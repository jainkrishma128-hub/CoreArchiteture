@{
    ViewData["Title"] = "Inventory Master";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark mb-1">Inventory Master</h1>
            <p class="text-muted mb-0">Manage stock levels and track transactions</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary rounded-pill px-4 shadow-sm" id="btnRefresh">
                <i class="fas fa-sync-alt me-2"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-primary-subtle text-primary rounded-circle me-3">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Total Stock</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statTotalStock">...</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-warning-subtle text-warning rounded-circle me-3">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Low Stock Items</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statLowStock">...</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-danger-subtle text-danger rounded-circle me-3">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Out of Stock</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statOutOfStock">...</h2>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white border-bottom p-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0 ps-3 rounded-start-pill text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="inventorySearchBox" class="form-control bg-light border-0 py-2 rounded-end-pill" placeholder="Search products...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="inventoryCategorySelect" class="form-select border-0 bg-light py-2 rounded-pill ps-3">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-4 text-end">
                    <button class="btn btn-primary rounded-pill px-4" id="btnFilterInventory">
                        <i class="fas fa-filter me-2"></i> Filter
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="inventoryTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold">Product</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Category</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Current Stock</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Last Updated</th>
                            <th class="pe-4 py-3 text-uppercase text-muted small fw-bold text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="inventoryTableBody">
                        <!-- Data loaded via JS -->
                    </tbody>
                </table>
            </div>
            
            <!-- Loading Indicator -->
            <div id="loadingInventory" class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Loading inventory data...</p>
            </div>

            <!-- Empty State -->
            <div id="emptyInventory" class="text-center py-5" style="display: none;">
                <i class="fas fa-box-open text-muted mb-3" style="font-size: 3rem;"></i>
                <h5 class="text-muted">No inventory records found</h5>
            </div>

            <!-- Pagination -->
            <div class="p-4 border-top d-flex justify-content-between align-items-center bg-light bg-opacity-10">
                <span class="text-muted small" id="inventoryResultInfo"></span>
                <nav>
                    <ul class="pagination pagination-sm mb-0 shadow-sm" id="inventoryPagination"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Stock Adjustment Modal -->
<div class="modal fade" id="adjustmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
            <div class="modal-header border-bottom-0 bg-primary text-white p-4">
                <div>
                    <h5 class="modal-title fw-bold">Adjust Stock</h5>
                    <p class="mb-0 text-white-50 small" id="adjustmentProductLabel"></p>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="adjustmentForm">
                <div class="modal-body p-4">
                    <input type="hidden" id="adjProductId" name="ProductId" />
                    
                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Adjustment Type</label>
                        <select class="form-select bg-light border-0" id="adjType" name="TransactionType" required>
                            <option value="1">Purchase (Stock In)</option>
                            <option value="2">Sale (Stock Out)</option>
                            <option value="3">Adjustment (Add/Remove)</option>
                            <option value="4">Return (Stock In)</option>
                            <option value="5">Damage (Stock Out)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Quantity</label>
                        <div class="input-group">
                            <input type="number" class="form-control bg-light border-0" id="adjQuantity" name="Quantity" required placeholder="Use positive for Add, negative for Remove">
                        </div>
                        <small class="text-muted">Enter positive to increase, negative to decrease stock.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Reason</label>
                        <input type="text" class="form-control bg-light border-0" id="adjReason" name="Reason" maxlength="200" required placeholder="e.g. Monthly stock count">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted small fw-bold text-uppercase">Reference #</label>
                        <input type="text" class="form-control bg-light border-0" id="adjRef" name="ReferenceNumber" maxlength="50" placeholder="e.g. PO-12345">
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light p-4">
                    <button type="button" class="btn btn-light border rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4" id="btnSaveAdjustment">Update Stock</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Transaction History Modal -->
<div class="modal fade" id="historyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg">
            <div class="modal-header border-bottom bg-light">
                <h5 class="modal-title fw-bold">Transaction History</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="table-responsive" style="max-height: 400px;">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="bg-light sticky-top">
                            <tr>
                                <th class="ps-3 py-2">Date</th>
                                <th class="py-2">Type</th>
                                <th class="py-2 text-end">Qty</th>
                                <th class="py-2">Reason</th>
                                <th class="py-2">User</th>
                            </tr>
                        </thead>
                        <tbody id="historyTableBody">
                            <!-- Data -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-inventory.js"></script>
}
