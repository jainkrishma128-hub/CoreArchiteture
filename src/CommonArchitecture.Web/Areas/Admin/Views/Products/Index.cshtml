@{
    ViewData["Title"] = "Product Inventory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark mb-1">Product Inventory</h1>
            <p class="text-muted mb-0">Manage catalog, pricing, and stock levels</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/Admin/Products/Export" class="btn btn-outline-success rounded-pill px-4 shadow-sm">
                <i class="fas fa-file-export me-2"></i> Export
            </a>
            <button class="btn btn-outline-primary rounded-pill px-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="fas fa-file-import me-2"></i> Import
            </button>
            <button class="btn btn-primary rounded-pill px-4 shadow-sm" id="btnCreateProduct">
                <i class="fas fa-plus me-2"></i> Add Product
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-primary-subtle text-primary rounded-circle me-3">
                        <i class="fas fa-box"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Total Items</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statTotalProducts">...</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-success-subtle text-success rounded-circle me-3">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Value</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">$12.4k</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-warning-subtle text-warning rounded-circle me-3">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Low Stock</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statLowStock">...</h2>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-info-subtle text-info rounded-circle me-3">
                        <i class="fas fa-tags"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Categories</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">8</h2>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <!-- Advanced Filter Bar -->
        <div class="card-header bg-white border-bottom p-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0 ps-3 rounded-start-pill text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="searchBox" class="form-control bg-light border-0 py-2 rounded-end-pill" placeholder="Search by name, SKU...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="pageSizeSelect" class="form-select border-0 bg-light py-2 rounded-pill ps-3">
                        <option value="10" selected>10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                    </select>
                </div>
               <div class="col-md-4 text-end">
                     <button class="btn btn-primary rounded-pill px-4" id="btnFilter">
                        <i class="fas fa-filter me-2"></i> Filter
                    </button>
                    <button class="btn btn-light text-muted rounded-pill px-3 ms-2" id="btnClearSearch">
                        Reset
                    </button>
                </div>
            </div>
        </div>

        <!-- Alert messages -->
        <div id="alertContainer" class="px-4 pt-3"></div>

        <!-- Modern Table -->
        <div class="card-body p-0">
            <div class="table-admin-wrapper table-responsive">
                <table class="table table-hover align-middle mb-0 table-admin" id="productsTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold">Product</th>
                            <th class="py-3 text-uppercase text-muted small fw-bold sortable cursor-pointer" data-column="Id">ID <i class="fas fa-sort text-muted small ms-1"></i></th>
                            <th class="py-3 text-uppercase text-muted small fw-bold sortable cursor-pointer" data-column="Price">Price <i class="fas fa-sort text-muted small ms-1"></i></th>
                            <th class="py-3 text-uppercase text-muted small fw-bold sortable cursor-pointer" data-column="Stock">Stock <i class="fas fa-sort text-muted small ms-1"></i></th>
                            <th class="pe-4 py-3 text-uppercase text-muted small fw-bold text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="productsTableBody" class="border-top-0">
                        <!-- Data loaded via JS -->
                    </tbody>
                </table>
            </div>

            <!-- Loading & Empty States -->
            <div id="loadingIndicator" class="text-center py-5" style="display: none;">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Loading inventory...</p>
            </div>
            
            <div id="emptyState" class="text-center py-5" style="display: none;">
                <div class="mb-3">
                    <i class="fas fa-box-open text-muted opacity-25" style="font-size: 3rem;"></i>
                </div>
                <h5 class="text-muted">No products found</h5>
                <p class="text-muted small">Try adjusting your filters</p>
            </div>
            
             <!-- Modern Pagination -->
            <div class="p-4 border-top d-flex justify-content-between align-items-center bg-light bg-opacity-10">
                <span class="text-muted small" id="resultInfo">Showing results</span>
                <nav>
                    <ul class="pagination pagination-sm mb-0 shadow-sm" id="pagination"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="productModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
             <div class="modal-header border-bottom-0 bg-primary text-white p-4">
                <div>
                     <h5 class="modal-title fw-bold" id="productModalLabel">Product Details</h5>
                     <p class="mb-0 text-white-50 small">Manage product information</p>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="productForm">
                <div class="modal-body p-4 bg-light bg-opacity-50">
                    <input type="hidden" id="productId" />
                    
                    <div class="row g-4">
                        <div class="col-md-12">
                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-body p-4">
                                    <div class="mb-3">
                                        <label for="productName" class="form-label text-muted small fw-bold text-uppercase">Product Name</label>
                                        <input type="text" class="form-control bg-light border-0" id="productName" name="Name" maxlength="100" required placeholder="e.g. Premium Wireless Headphones">
                                        <span class="text-danger small" id="error-Name"></span>
                                    </div>

                                    <div class="mb-3">
                                         <label for="productDescription" class="form-label text-muted small fw-bold text-uppercase">Description</label>
                                         <textarea class="form-control bg-light border-0" id="productDescription" name="Description" rows="3" maxlength="500" required placeholder="Detailed product description..."></textarea>
                                         <span class="text-danger small" id="error-Description"></span>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="productPrice" class="form-label text-muted small fw-bold text-uppercase">Price ($)</label>
                                            <div class="input-group border-0">
                                                <span class="input-group-text border-0 bg-light"><i class="fas fa-dollar-sign text-muted"></i></span>
                                                <input type="number" class="form-control bg-light border-0" id="productPrice" name="Price" step="0.01" min="0.01" required placeholder="0.00">
                                            </div>
                                            <span class="text-danger small" id="error-Price"></span>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label for="productStock" class="form-label text-muted small fw-bold text-uppercase">Stock Level</label>
                                            <input type="number" class="form-control bg-light border-0" id="productStock" name="Stock" min="0" required placeholder="0">
                                            <span class="text-danger small" id="error-Stock"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light">
                    <button type="button" class="btn btn-light border rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold" id="btnSaveProduct">
                         <span class="spinner-border spinner-border-sm d-none me-2" id="saveSpinner"></span>
                        <span id="saveButtonText">Save Product</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
             <div class="modal-body text-center p-5">
                <div class="icon-box bg-danger-subtle text-danger rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; font-size: 2rem;">
                    <i class="fas fa-trash-alt"></i>
                </div>
                <h4 class="fw-bold mb-2">Delete Product?</h4>
                <p class="text-muted mb-4">Are you sure you want to delete <strong id="deleteProductName" class="text-dark"></strong>?<br>This action cannot be undone.</p>
                
                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light border rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger rounded-pill px-4 fw-bold" id="btnConfirmDelete">
                         <span class="spinner-border spinner-border-sm d-none me-2" id="deleteSpinner"></span>
                        Yes, Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Import Modal -->
<div class="modal fade" id="importModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
             <div class="modal-header border-bottom-0 bg-primary text-white p-4">
                <div>
                     <h5 class="modal-title fw-bold" id="importModalLabel">Import Products</h5>
                     <p class="mb-0 text-white-50 small">Upload CSV to bulk create products</p>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="importForm" enctype="multipart/form-data">
                <div class="modal-body p-5">
                    <div class="mb-4 text-center">
                        <i class="fas fa-file-csv text-success mb-3" style="font-size: 3rem;"></i>
                        <p class="text-muted">Select a CSV file containing product data.<br>Columns: Name, Description, Price, Stock</p>
                        <a href="/Admin/Products/DownloadTemplate" class="btn btn-sm btn-outline-info rounded-pill px-3">
                            <i class="fas fa-download me-1"></i> Download Format Template
                        </a>
                    </div>
                    
                    <div class="mb-3">
                         <input class="form-control form-control-lg bg-light border-0" type="file" id="importFile" name="file" accept=".csv" required>
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light">
                    <button type="button" class="btn btn-light border rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold" id="btnImport">
                         <span class="spinner-border spinner-border-sm d-none me-2" id="importSpinner"></span>
                        <span id="importButtonText">Import Products</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    
    <script>
        window.adminAreaPrefix = '/Admin';
    </script>
    <script src="~/js/admin-products.js"></script>
    
    <script>
        // Inline override for rendering products table
        $(document).ready(function() {
             window.renderProductsTable = function(products) {
                const tbody = $('#productsTableBody');
                tbody.empty();
                
                if (products.length === 0) {
                    $('#emptyState').show();
                    $('#productsTable').hide();
                    return;
                }
                
                $('#emptyState').hide();
                $('#productsTable').show();
                
                products.forEach(function(product) {
                    // Stock logic
                    let stockBadge;
                    if (product.stock === 0) stockBadge = '<span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3">Out of Stock</span>';
                    else if (product.stock < 10) stockBadge = `<span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Low: ${product.stock}</span>`;
                    else stockBadge = `<span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">${product.stock} In Stock</span>`;
                    
                    const row = `
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="product-icon me-3 shadow-sm border">
                                        <i class="fas fa-box"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold text-dark">${product.name}</h6>
                                        <small class="text-muted d-block text-truncate" style="max-width: 250px;">${product.description}</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="text-muted fw-medium">#${product.id}</span></td>
                             <td>
                                <span class="fw-bold text-dark fs-6">$${product.price.toFixed(2)}</span>
                            </td>
                            <td>${stockBadge}</td>
                            <td class="pe-4 text-end">
                                <button class="btn btn-light btn-sm rounded-pill px-3 text-primary fw-bold me-1" onclick="editProduct(${product.id})">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </button>
                                <button class="btn btn-light btn-sm rounded-pill px-3 text-danger fw-bold" onclick="deleteProduct(${product.id}, '${product.name}')">
                                    <i class="fas fa-trash me-1"></i>
                                </button>
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
                
                // Update stats
                $('#statTotalProducts').text(products.length);
                $('#statLowStock').text(products.filter(p => p.stock < 10).length);
             };

             // Import Logic
             $('#importForm').on('submit', function(e) {
                 e.preventDefault();
                 
                 var formData = new FormData();
                 var fileInput = $('#importFile')[0];
                 
                 if(fileInput.files.length === 0){
                     alert("Please select a file");
                     return;
                 }
                 
                 formData.append('file', fileInput.files[0]);
                 
                 $('#btnImport').prop('disabled', true);
                 $('#importSpinner').removeClass('d-none');
                 $('#importButtonText').text('Importing...');
                 
                 $.ajax({
                     url: '/Admin/Products/Import',
                     type: 'POST',
                     data: formData,
                     processData: false,
                     contentType: false,
                     success: function(response) {
                         if(response.success) {
                             $('#importModal').modal('hide');
                             $('#importForm')[0].reset();
                             // Refresh table
                             loadProducts(); 
                         } else {
                             alert(response.message || "Import failed");
                         }
                     },
                     error: function() {
                         alert("An error occurred during import.");
                     },
                     complete: function() {
                         $('#btnImport').prop('disabled', false);
                         $('#importSpinner').addClass('d-none');
                         $('#importButtonText').text('Import Products');
                     }
                 });
             });
        });
    </script>
}
