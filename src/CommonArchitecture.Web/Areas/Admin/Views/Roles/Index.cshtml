@{
    ViewData["Title"] = "Role Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-dark mb-1">Role Management</h1>
            <p class="text-muted mb-0">Define user roles and access permissions</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4 shadow-sm" id="btnCreateRole">
            <i class="fas fa-plus me-2"></i> Create New Role
        </button>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-primary-subtle text-primary rounded-circle me-3">
                        <i class="fas fa-user-tag"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Total Roles</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statTotalRoles">...</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-purple-subtle text-purple rounded-circle me-3">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">System Roles</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark">2</h2>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card bg-white p-4 rounded-4 shadow-sm border-0 h-100">
                <div class="d-flex align-items-center mb-2">
                    <div class="icon-box bg-success-subtle text-success rounded-circle me-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <span class="text-muted fw-medium text-uppercase small">Active</span>
                </div>
                <h2 class="fw-bold mb-0 text-dark" id="statActiveRoles">...</h2>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <!-- Filter Bar -->
        <div class="card-header bg-white border-bottom p-4">
            <div class="row g-3 align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0 ps-3 rounded-start-pill text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="searchBox" class="form-control bg-light border-0 py-2 rounded-end-pill" placeholder="Search roles...">
                    </div>
                </div>
                <div class="col-md-6 text-end">
                     <button class="btn btn-light text-muted rounded-pill px-3 ms-2" id="btnClearSearch">
                        <i class="fas fa-sync-alt me-1"></i> Refresh
                    </button>
                </div>
            </div>
        </div>

        <!-- Alert Messages -->
        <div id="alertContainer" class="px-4 pt-3"></div>

        <!-- Modern Table -->
        <div class="card-body p-0">
            <div class="table-admin-wrapper table-responsive">
                <table class="table table-hover align-middle mb-0 table-admin" id="rolesTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase text-muted small fw-bold sortable cursor-pointer" data-column="Id">ID <i class="fas fa-sort text-muted small ms-1"></i></th>
                            <th class="py-3 text-uppercase text-muted small fw-bold sortable cursor-pointer" data-column="RoleName">Role Name <i class="fas fa-sort text-muted small ms-1"></i></th>
                            <th class="py-3 text-uppercase text-muted small fw-bold">Permissions</th>
                            <th class="pe-4 py-3 text-uppercase text-muted small fw-bold text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="rolesTableBody" class="border-top-0">
                        <!-- Data loaded via JS -->
                    </tbody>
                </table>
            </div>

            <!-- Loading & Empty States -->
            <div id="loadingIndicator" class="text-center py-5" style="display: none;">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Loading roles...</p>
            </div>
            
            <div id="emptyState" class="text-center py-5" style="display: none;">
                <div class="mb-3">
                    <i class="fas fa-folder-open text-muted opacity-25" style="font-size: 3rem;"></i>
                </div>
                <h5 class="text-muted">No roles found</h5>
            </div>
        </div>
        
         <!-- Pagination -->
        <div class="p-4 border-top d-flex justify-content-between align-items-center bg-light bg-opacity-10">
            <span class="text-muted small" id="resultInfo">Showing results</span>
            <nav>
                <ul class="pagination pagination-sm mb-0 shadow-sm" id="pagination"></ul>
            </nav>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
             <div class="modal-header border-bottom-0 bg-primary text-white p-4">
                <div>
                     <h5 class="modal-title fw-bold" id="roleModalLabel">Create Role</h5>
                     <p class="mb-0 text-white-50 small">Define a new system role</p>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="roleForm">
                <div class="modal-body p-4 bg-light bg-opacity-50">
                    <input type="hidden" id="roleId" />
                    
                    <div class="mb-3">
                        <label for="roleName" class="form-label text-muted small fw-bold text-uppercase">Role Name</label>
                        <input type="text" class="form-control bg-light border-0 p-3" id="roleName" name="RoleName" maxlength="100" required placeholder="e.g. Editor">
                        <span class="text-danger small" id="error-RoleName"></span>
                    </div>
                    
                    <div class="alert alert-info border-0 bg-info-subtle text-info mb-0 rounded-3">
                        <i class="fas fa-info-circle me-2"></i> Roles define what users can access in the system.
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light">
                    <button type="button" class="btn btn-light border rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 fw-bold" id="btnSaveRole">
                        <span class="spinner-border spinner-border-sm d-none me-2" id="saveSpinner"></span>
                        <span id="saveButtonText">Save Role</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow-lg overflow-hidden">
             <div class="modal-body text-center p-5">
                <div class="icon-box bg-danger-subtle text-danger rounded-circle mx-auto mb-4" style="width: 80px; height: 80px; font-size: 2rem;">
                    <i class="fas fa-trash-alt"></i>
                </div>
                <h4 class="fw-bold mb-2">Delete Role?</h4>
                <p class="text-muted mb-4">Are you sure you want to delete <strong id="deleteRoleName" class="text-dark"></strong>?<br>Users with this role may lose access.</p>
                
                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light border rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger rounded-pill px-4 fw-bold" id="btnConfirmDelete">
                         <span class="spinner-border spinner-border-sm d-none me-2" id="deleteSpinner"></span>
                        Yes, Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Shared Premium Styles */
    body { font-family: 'Inter', system-ui, -apple-system, sans-serif; }
    .icon-box { display: flex; align-items: center; justify-content: center; width: 48px; height: 48px; font-size: 1.25rem; }
    .stat-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .stat-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important; }
    .cursor-pointer { cursor: pointer; }
    
    .bg-purple-subtle { background-color: #f3e8ff; }
    .text-purple { color: #9333ea; }
    
    /* Table Styles */
    #rolesTable thead th { letter-spacing: 0.05em; }
    #rolesTable tbody tr { transition: background-color 0.2s; }
    #rolesTable tbody tr:hover { background-color: #f8f9fa; }
    
    /* Pagination */
    .pagination .page-link { border-radius: 8px; margin: 0 3px; border: none; color: #6c757d; font-weight: 500; }
    .pagination .page-item.active .page-link { background-color: #0d6efd; box-shadow: 0 2px 5px rgba(13, 110, 253, 0.3); color: white; }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    
    <script>
        window.adminAreaPrefix = '/Admin';
    </script>
    <script src="~/js/admin-roles.js"></script>
    
    <script>
        // Inline override for rendering roles table nicely
        $(document).ready(function() {
             window.renderRolesTable = function(roles) {
                const tbody = $('#rolesTableBody');
                tbody.empty();
                
                if (roles.length === 0) {
                    $('#emptyState').show();
                    $('#rolesTable').hide();
                    return;
                }
                
                $('#emptyState').hide();
                $('#rolesTable').show();
                
                roles.forEach(function(role) {
                    const isAdmin = role.id === 1 || role.roleName.toLowerCase() === 'admin';
                    const badgeClass = isAdmin ? 'bg-primary bg-opacity-10 text-primary' : 'bg-secondary bg-opacity-10 text-secondary';
                    const icon = isAdmin ? '<i class="fas fa-shield-alt me-1"></i>' : '<i class="fas fa-user-tag me-1"></i>';
                    
                    const row = `
                        <tr>
                            <td class="ps-4"><span class="text-muted fw-medium">#${role.id}</span></td>
                            <td>
                                <span class="badge ${badgeClass} rounded-pill px-3 py-2 fs-6">
                                    ${icon} ${role.roleName}
                                </span>
                            </td>
                            <td>
                                <small class="text-muted">Standard Access</small>
                            </td>
                            <td class="pe-4 text-end">
                                <button class="btn btn-light btn-sm rounded-pill px-3 text-primary fw-bold me-1" onclick="editRole(${role.id}, '${role.roleName}')">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </button>
                                ${!isAdmin ? `
                                <button class="btn btn-light btn-sm rounded-pill px-3 text-danger fw-bold" onclick="deleteRole(${role.id}, '${role.roleName}')">
                                    <i class="fas fa-trash me-1"></i>
                                </button>` : ''}
                            </td>
                        </tr>
                    `;
                    tbody.append(row);
                });
                
                // Update stats
                $('#statTotalRoles').text(roles.length);
                $('#statActiveRoles').text(roles.length);
             };
        });
    </script>
}
