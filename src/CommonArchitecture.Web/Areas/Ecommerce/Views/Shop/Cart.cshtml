@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="cart-page">
    <div class="container">
        <div class="cart-header">
            <h1><i class="bi bi-cart3"></i> Shopping Cart</h1>
            <p class="text-muted">Review your items before checkout</p>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="cart-items-card">
                    <div class="cart-empty" id="cartEmpty">
                        <div class="empty-icon">
                            <i class="bi bi-cart-x"></i>
                        </div>
                        <h3>Your cart is empty</h3>
                        <p>Looks like you haven't added anything to your cart yet.</p>
                        <a asp-area="Ecommerce" asp-controller="Shop" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-bag"></i> Start Shopping
                        </a>
                    </div>
                    <div class="cart-items" id="cartItems" style="display: none;">
                        <!-- Cart items will be rendered here -->
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart-summary-card" id="cartSummary" style="display: none;">
                    <h4>Order Summary</h4>
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span id="cartSubtotal">$0.00</span>
                    </div>
                    <div class="summary-row">
                        <span>Shipping</span>
                        <span class="text-success">Free</span>
                    </div>
                    <div class="summary-row">
                        <span>Tax</span>
                        <span id="cartTax">$0.00</span>
                    </div>
                    <hr />
                    <div class="summary-row total">
                        <span>Total</span>
                        <span id="cartTotal">$0.00</span>
                    </div>
                    <button class="btn btn-primary btn-checkout w-100">
                        <i class="bi bi-credit-card"></i> Proceed to Checkout
                    </button>
                    <a asp-area="Ecommerce" asp-controller="Shop" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

