@{
    ViewData["Title"] = "Checkout";
}

<div class="checkout-page py-5">
    <div class="container">
        <div class="checkout-header mb-5">
            <h1 class="fw-bold"><i class="bi bi-credit-card me-2"></i> Checkout</h1>
            <p class="text-muted">Complete your order by providing your shipping and payment details.</p>
        </div>

        <div class="row g-5">
            <div class="col-lg-8">
                <div class="checkout-form-card card shadow-sm border-0 rounded-3">
                    <div class="card-body p-4">
                        <h4 class="mb-4">Shipping Information</h4>
                        <form id="checkoutForm">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="customerName" class="form-label">Full Name</label>
                                    <input type="text" class="form-control" id="customerName" required placeholder="John Doe">
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email Address</label>
                                    <input type="email" class="form-control" id="email" required placeholder="john@example.com">
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" id="phone" required placeholder="+1 234 567 8900">
                                </div>
                                <div class="col-12">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="address" required placeholder="123 Main St, Apt 4">
                                </div>
                                <div class="col-md-6">
                                    <label for="city" class="form-label">City</label>
                                    <input type="text" class="form-control" id="city" required placeholder="New York">
                                </div>
                                <div class="col-md-6">
                                    <label for="zipCode" class="form-label">Zip Code</label>
                                    <input type="text" class="form-control" id="zipCode" required placeholder="10001">
                                </div>
                            </div>

                            <hr class="my-5">

                            <h4 class="mb-4">Payment Information</h4>
                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="cc-name" class="form-label">Name on card</label>
                                    <input type="text" class="form-control" id="cc-name" placeholder="" value="John Doe" disabled>
                                    <small class="text-muted">Full name as displayed on card</small>
                                </div>
                                <div class="col-md-6">
                                    <label for="cc-number" class="form-label">Credit card number</label>
                                    <input type="text" class="form-control" id="cc-number" placeholder="" value="**** **** **** 1234" disabled>
                                </div>
                                <div class="col-md-3">
                                    <label for="cc-expiration" class="form-label">Expiration</label>
                                    <input type="text" class="form-control" id="cc-expiration" placeholder="" value="12/29" disabled>
                                </div>
                                <div class="col-md-3">
                                    <label for="cc-cvv" class="form-label">CVV</label>
                                    <input type="text" class="form-control" id="cc-cvv" placeholder="" value="***" disabled>
                                </div>
                            </div>
                            <div class="mt-2 text-info small">
                                <i class="bi bi-info-circle me-1"></i> This is a demo. No real payment will be processed.
                            </div>

                            <button class="btn btn-primary btn-lg w-100 mt-5" type="submit" id="btnPlaceOrder">
                                <i class="bi bi-lock-fill me-1"></i> Place Order Now
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="order-summary-card card shadow-sm border-0 rounded-3 sticky-top" style="top: 2rem;">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Order Summary</h5>
                    </div>
                    <div class="card-body" id="checkoutSummaryItems">
                        <!-- Items will be loaded via JS -->
                    </div>
                    <div class="card-footer bg-white p-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span id="checkoutSubtotal fw-bold">$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping</span>
                            <span class="text-success fw-bold">Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Tax (10%)</span>
                            <span id="checkoutTax">$0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-0 fs-5 fw-bold">
                            <span>Total</span>
                            <span class="text-primary" id="checkoutTotal">$0.00</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}
