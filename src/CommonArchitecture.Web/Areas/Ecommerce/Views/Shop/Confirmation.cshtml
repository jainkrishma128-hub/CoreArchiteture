@model CommonArchitecture.Application.DTOs.OrderDto
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="confirmation-page py-5">
    <div class="container">
        <div class="text-center mb-5">
            <div class="success-icon mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
            </div>
            <h1 class="fw-bold">Thank You for Your Order!</h1>
            <p class="lead text-muted">Order #@Model.OrderNumber has been placed successfully.</p>
            <p>A confirmation email has been sent to <strong>@Model.Email</strong></p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-borderless align-middle">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Qty</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="https://picsum.photos/seed/@item.ProductId/50/50" class="rounded me-3" alt="@item.ProductName">
                                                    <div>
                                                        <h6 class="mb-0 fw-bold">@item.ProductName</h6>
                                                        <span class="text-muted small">$@item.UnitPrice.ToString("F2") / unit</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-end fw-bold">$@item.TotalPrice.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="2" class="text-end">Subtotal</td>
                                        <td class="text-end">$@Model.Subtotal.ToString("F2")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" class="text-end">Tax (10%)</td>
                                        <td class="text-end">$@Model.Tax.ToString("F2")</td>
                                    </tr>
                                    <tr class="fs-5 fw-bold">
                                        <td colspan="2" class="text-end">Total Amount</td>
                                        <td class="text-end text-primary">$@Model.TotalAmount.ToString("F2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 rounded-3 h-100">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3"><i class="bi bi-person me-2"></i> Customer Details</h6>
                                <p class="mb-1">@Model.CustomerName</p>
                                <p class="mb-1 text-muted">@Model.Email</p>
                                <p class="mb-0 text-muted">@Model.Phone</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card shadow-sm border-0 rounded-3 h-100">
                            <div class="card-body">
                                <h6 class="fw-bold mb-3"><i class="bi bi-geo-alt me-2"></i> Shipping Address</h6>
                                <p class="mb-1">@Model.Address</p>
                                <p class="mb-0 text-muted">@Model.City, @Model.ZipCode</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-5">
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary px-4 py-2">
                        <i class="bi bi-bag me-1"></i> Continue Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
