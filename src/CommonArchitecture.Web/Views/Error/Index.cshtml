@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- Error Icon -->
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-exclamation-triangle text-danger" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z"/>
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z"/>
                        </svg>
                    </div>

                    <!-- Error Title -->
                    <h1 class="display-4 text-danger mb-3">Oops! Something went wrong</h1>

                    <!-- Error Message -->
                    <p class="lead text-muted mb-4">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            @Model.ErrorMessage
                        }
                        else
                        {
                            <text>An unexpected error occurred while processing your request.</text>
                        }
                    </p>

                    <!-- Status Code Badge -->
                    @if (Model.StatusCode > 0)
                    {
                        <div class="mb-4">
                            <span class="badge bg-danger fs-5">Error Code: @Model.StatusCode</span>
                        </div>
                    }

                    <!-- Request ID -->
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary" role="alert">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                    </div>

                    <!-- Help Text -->
                    <div class="mt-5 text-muted">
                        <small>
                            If this problem persists, please contact support with the Request ID above.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 25px;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 2px 6px;
        border-radius: 4px;
    }
</style>
