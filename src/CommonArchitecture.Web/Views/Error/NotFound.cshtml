@model ErrorViewModel
@{
    ViewData["Title"] = "Page Not Found";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <!-- 404 Icon -->
                    <div class="mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" fill="currentColor" class="bi bi-search text-warning" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </div>

                    <!-- 404 Title -->
                    <h1 class="display-1 text-warning mb-3">404</h1>
                    <h2 class="mb-3">Page Not Found</h2>

                    <!-- Error Message -->
                    <p class="lead text-muted mb-4">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            @Model.ErrorMessage
                        }
                        else
                        {
                            <text>The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.</text>
                        }
                    </p>

                    <!-- Request ID -->
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary" role="alert">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Go Back
                        </a>
                        <a href="/" class="btn btn-warning text-white">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                    </div>

                    <!-- Suggestions -->
                    <div class="mt-5">
                        <h5 class="text-muted mb-3">Here are some helpful links instead:</h5>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/" class="text-decoration-none">Home</a>
                            <span class="text-muted">|</span>
                            <a href="/Admin/Auth/Login" class="text-decoration-none">Login</a>
                            <span class="text-muted">|</span>
                            <a href="/Admin/Dashboard" class="text-decoration-none">Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }
    
    .btn {
        border-radius: 25px;
        padding: 10px 25px;
    }
    
    code {
        background-color: #f8f9fa;
        padding: 2px 6px;
        border-radius: 4px;
    }
    
    .display-1 {
        font-size: 8rem;
        font-weight: bold;
    }
</style>
