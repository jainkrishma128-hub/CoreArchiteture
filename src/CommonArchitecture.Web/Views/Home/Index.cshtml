<style>
    /* Hero Styles */
    .hero-wrapper {
        min-height: 90vh;
        background-color: #0f172a;
        padding-top: 80px; /* Navbar offset */
    }
    
    .hero-bg-shapes .shape {
        position: absolute;
        filter: blur(80px);
        opacity: 0.6;
        z-index: 1;
        animation: floatShape 20s infinite alternate cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .shape-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: #4f46e5;
        border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    }
    
    .shape-2 {
        bottom: -20%;
        right: -10%;
        width: 40vw;
        height: 40vw;
        background: #06b6d4;
         border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
         animation-delay: -5s;
    }
     
    .shape-3 {
        top: 30%;
        left: 30%;
        width: 30vw;
        height: 30vw;
        background: #7c3aed;
        border-radius: 50%;
        opacity: 0.4;
        animation-delay: -10s;
    }

    @@keyframes floatShape {
        0% { transform: translate(0, 0) rotate(0deg); }
        100% { transform: translate(100px, 50px) rotate(20deg); }
    }
    
    .text-gradient-cyan {
        background: linear-gradient(135deg, #67e8f9 0%, #2dd4bf 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .bg-gradient-cyan {
         background: linear-gradient(90deg, #67e8f9 0%, #2dd4bf 100%);
    }

    /* Glass Cards */
    .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
    }

    /* Animations */
    .animate-float-slow {
        animation: floatVertical 6s ease-in-out infinite;
    }
    
    .animate-float-fast {
        animation: floatVertical 4s ease-in-out infinite reverse;
    }
    
    @@keyframes floatVertical {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
    
    .icon-circle {
        width: 60px;
        height: 60px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .h-fit-content {
        height: min-content;
    }

    .transition-all {
        transition: all 0.3s ease;
    }

    .hover-shadow:hover {
        box-shadow: 0 1rem 3rem rgba(0,0,0,.1) !important;
        transform: translateY(-5px);
    }

    .leading-tight {
        line-height: 1.1;
    }

    .backdrop-blur {
        backdrop-filter: blur(10px);
    }

    /* Developer Profile Styling */
    .profile-blob {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120%;
        height: 120%;
        background: linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%);
        filter: blur(40px);
        opacity: 0.15;
        z-index: 1;
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }

    .animate-blob {
        animation: blobMorph 10s infinite alternate linear;
    }

    @@keyframes blobMorph {
        0% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
        33% { border-radius: 50% 50% 20% 80% / 50% 20% 80% 50%; }
        66% { border-radius: 80% 20% 50% 50% / 20% 50% 50% 80%; }
        100% { border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%; }
    }

    .experience-badge {
        position: absolute;
        bottom: 20px;
        right: -30px;
        background: white;
        padding: 1rem 1.5rem;
        border-radius: 20px;
        text-align: center;
        z-index: 3;
    }

    .icon-sm {
        width: 48px;
